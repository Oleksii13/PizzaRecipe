<!doctype html>
<html>

<head>
    <title>Login Menu</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <!-- load bootstrap css -->
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- load fontawesome -->
    <link href="https://fonts.googleapis.com/css?family=Crete+Round" rel="stylesheet">
    <!-- Bootstrap CDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" />

    <!-- JQuery -->
    <script src="https://code.jquery.com/jquery.js"></script>

    <!-- My CSS -->
    <link href="assets/css/styles.css" rel="stylesheet" />
    <script src="assets/js/pizzas.js"></script>
    <script src="assets/js/underscore.js"></script>
</head>

<body style="overflow: scroll">
    <div class="container" id="jumbotron">
        <div class="jumbotron text-center">
            <h1 class="authH1"><span class="fa fa-lock"></span> Pizza Recipe Authentication</h1>

            <!-- <p>Login or Register with:</p> -->
            <div class="logReg">
                <a style="color: #a2364d;" href="/login" class="btn btn-default"><span class="fa fa-user"></span> Local
                    Login</a>
                <a style="color: #a2364d;" href="/signup" class="btn btn-default"><span class="fa fa-user"></span>
                    Local Signup</a>
            </div>
        </div>

        <h3>All Pizza Recipes</h3>
        <table>
            <tr>
                <th>Title</th>
                <th>Recipe</th>
                <th>Ingredients</th>
            </tr>
            <% for(var i=0; i<allRecipes.length; i++) {%>
            <tr>
                <td>
                    <%= allRecipes[i].title%>
                </td>
                <td>
                    <%= allRecipes[i].recipe%>
                </td>
                <td>
                    <%= allRecipes[i].ingredients%>
                </td>
            </tr>
            <% } %>
        </table>

        <!-- =========== -->
        <table>


            <% for(var i=0; i<allRecipes.length; i++) {%>
            <tr>
                <th>Title</th>
            </tr>
            <tr>
                <td>
                    <%= allRecipes[i].title%>
                </td>
            </tr>
            <tr>

                <th>Recipe</th>
            </tr>
            <tr>

                <td>
                    <%= allRecipes[i].recipe%>
                </td>
            </tr>
            <tr>
                <th>Ingredients</th>
            </tr>
            <tr>
                <% for(var j=0; j<allRecipes[i].ingredients.length; j++) {%>
            <tr>
                <td>
                    <%= allRecipes[i].ingredients[j]%>
                </td>
            </tr>
            <% } %>
            </tr>
            <% } %>
        </table>
    </div>



</body>

</html>